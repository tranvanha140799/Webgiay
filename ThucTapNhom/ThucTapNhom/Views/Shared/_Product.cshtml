@model List<Models.EF.PRODUCT>

<div class="main">
    <div class="wrap">
        <div class="content-bottom">
            <div class="box1">
                @foreach (var item in Model)
                {
                    <div class="col_1_of_3 span_1_of_3">
                        <a href="@Url.Action("Details","Product",new {@id = item.ProductID })">
                            <div class="view view-fifth">
                                <div class="top_box">
                                    <h3 class="m_1">@item.ProductName</h3>
                                    <p class="m_2">Lorem ipsum</p>
                                    <div class="grid_img">
                                        <div class="css3"><img src="@item.ShowImage_1" alt="" /></div>
                                        <div class="mask">
                                            <div class="info">Quick View</div>
                                        </div>
                                    </div>
                                    <div class="price">£@item.ProductPrice</div>
                                </div>
                            </div>
                            <ul class="list">
                                <li>
                                    <img src="/Content/images/plus.png" alt="" />
                                    <ul class="icon1 sub-icon1 profile_img">
                                        <li>
                                            <a class="active-icon c1" href="#">Add To Bag </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            <ul class="list " style="background-color: #725b5b">
                                <li>
                                    <img src="/Content/images/plus.png" alt="" />
                                    <ul class="icon1 sub-icon1 profile_img">
                                        <li>
                                            <a class="active-icon c1" href="#" >Buy Now</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="clear"></div>
                        </a>
                    </div>
                }
                <div class="clear"></div>
            </div>
        </div>
    </div>
</div>



